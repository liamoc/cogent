bilbyFsItypeReg = 0

bilbyFsItypeDir: U8
bilbyFsItypeDir = 1

bilbyFsItypeLnk: U8
bilbyFsItypeLnk = 2

bilbyFsItypeBlk: U8
bilbyFsItypeBlk = 3

bilbyFsItypeChr: U8
bilbyFsItypeChr = 4

bilbyFsItypeFifo: U8
bilbyFsItypeFifo = 5

bilbyFsItypeSock: U8
